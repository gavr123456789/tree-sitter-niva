{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "niva",
      "camelcase": "Niva",
      "scope": "source.niva",
      "file-types": [
        "niva"
      ],
      "highlights": "queries/highlights.scm",
      "tags": "queries/tags.scm",
      "injection-regex": "niva",
      "class-name": "TreeSitterNiva"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "A parser for the Smalltalk-like programming language, Niva",
    "authors": [
      {
        "name": "Nadelio",
        "email": "carefulsniffle@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/tree-sitter/tree-sitter-niva"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true
  }
}
